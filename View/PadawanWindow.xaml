<kwc:AutoHideWindow x:Class="KeyPadawan.View.PadawanWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:kwc="clr-namespace:KeyPadawan.Windows.Controls" Left="0" Loaded="Window_Loaded">
    <kwc:AutoHideWindow.Resources>
        <Style x:Key="{x:Type TextBlock}" TargetType="{x:Type TextBlock}">
            <Setter Property="FontFamily"   
                Value="Arial" />
            <Setter Property="FontWeight"   
                Value="Bold" />
            <Setter Property="FontStretch"   
                Value="Expanded" />
            <Setter Property="FontSize"   
                Value="50" />
            <Setter Property="Foreground"   
                Value="White" />
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
    </kwc:AutoHideWindow.Resources>
    <Grid>
        <TextBlock Name="textBlock" Text="{Binding Path=Buffer}">
        </TextBlock>
    </Grid>
</kwc:AutoHideWindow >
